@model MedicalServiceDTO


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> form  Medical Service </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">form  Medical Service</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Medical Service form  </h4>
                    <p class="card-description"> Basic form  Medical Service </> </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="MedicalService" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label for="exampleInputUsername1"> Medical Service Name</label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Patient Name">
                            <span asp-validation-for="Name"></span>
                        </div>


                        <div class="form-group">
                            <label for="exampleInputUsername1">Medical Service Price</label>
                            <input asp-for="ServicePrice " type="number " class="form-control" placeholder="Service price">
                            <span asp-validation-for="ServicePrice"></span>
                        </div>
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

