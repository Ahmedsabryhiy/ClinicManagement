@model AppointmentServiceDTO


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> form  Appointment Medical Service </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">form Appointment Medical Service</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">AppointmentService form</h4>
                    <p class="card-description"> Basic form Appointment Medical Service </p>
                    <form class="forms-sample" method="post" enctype="multipart/form-data"
                          asp-controller="AppointmentMedicalService" asp-action="Save" role="form">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label for="exampleInputUsername1"> Service Price</label>
                            <input asp-for="Price" type="text" class="form-control" placeholder="Service Price">
                            <span asp-validation-for="Price"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="MedicalServiceId  "></label>
                            <select asp-for="MedicalServiceId" class="form-control"
                                    asp-items="ViewBag.listMedicalServices">
                                <option value="">-- Select MedicalService  --</option>
                            </select>
                            <span asp-validation-for="MedicalServiceId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="AppointmentId"></label>
                            <select asp-for="AppointmentId" class="form-control"
                                    asp-items="ViewBag.listAppointments">
                                <option value="">-- Select Appointment --</option>
                            </select>
                            <span asp-validation-for="MedicalServiceId" class="text-danger"></span>
                        </div>
                        <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">Save</button>
                        <button class="btn btn-light">New</button>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>

